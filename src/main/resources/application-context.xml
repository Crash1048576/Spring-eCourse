<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="entities.Client">
        <constructor-arg value = "1"/>
        <constructor-arg value = "John Smith"/>
    </bean>

    <bean id="event" class = "entities.Event" scope="prototype">
        <constructor-arg>
            <bean id = "date" class = "java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id = "dateFormat" class = "java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="consoleEventLogger" class="loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="loggers.FileEventLogger" init-method="init">
        <constructor-arg value="spring.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="loggers.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="spring.txt"/>
        <constructor-arg value="5"/>
    </bean>

    <bean id="app" class="main.App">
        <constructor-arg ref = "client"/>
        <constructor-arg ref = "fileEventLogger"/>
        <constructor-arg ref = "event"/>
    </bean>

</beans>